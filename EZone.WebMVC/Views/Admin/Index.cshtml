<div class="container">
    @if (Model != null)
    {
        <div class="col-md-6">
            <table class="table table-striped">
                <thead>
                    <tr class="btn-primary">
                        <th>Order Id</th>
                        <th>Order Date</th>
                        <th>Full Name</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.ListA)
                    {
                        <tr class="Search">
                            <td>
                                @item.OrderId
                            </td>
                            <td>
                                @item.OrderDate
                            </td>
                            <td>
                                @item.FirstName
                                @item.LastName
                            </td>
                            
                         </tr>
                     }
                    </tbody>
                </table>
</div>
        <div class="col-md-6">
            <table class="table table-success">
                <thead>
                    <tr class="btn-primary">
                        <th>Order Id</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.ListB)
                    {
                        <tr class="Search">
                            <td>
                                @item.OrderId
                            </td>
                            <td>
                                @item.Product.ProductName
                            </td>
                            <td>
                                @item.OrderQuantity
                            </td>
                            <td>
                                @item.Price
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>