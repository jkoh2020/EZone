@using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div>

        <div>
            <div class="container">
                <h2>Product Details</h2>
                <hr />
                <div class="row">

                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <img src="~/ProductImg/@Model.ProductImage" style="width:400px; height:400px" />
                    </div>
                    <div class="col-lg-4 col-md-4 col-sm-4" style="font-size:16px; color:black;">
                        <dl class="dl-horizontal">

                            <dt>
                                Category ID:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CategoryId)
                            </dd>

                            <dt>
                                Category Name:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CategoryName)
                            </dd>

                            <dt>
                                Product Name:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>

                            <dt>
                                Description:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Description)
                            </dd>

                            <dt>
                                Quantity:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.Quantity)
                            </dd>

                            <dt>
                                Price:
                            </dt>

                            <dd>
                                $ @Html.DisplayFor(model => model.Price)
                            </dd>

                            <dt>
                                Is New:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.IsNew)
                            </dd>

                            <dt>
                                Date Created:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CreatedDate)
                            </dd>

                            <dt>
                                Date Modified:
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.ModifiedDate)
                            </dd>

                        </dl>

                    </div>
                </div>
            </div>

        </div>
        <br /><br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="col-md-offset-2 col-md-10">
                    <a href="@Url.Action("EditProduct", "Admin", new { id = Model.ProductId })" class="btn btn-default"><i class="fa fa-pencil"></i> Edit</a>
                    <a onclick="window.history.back();" class="btn btn-danger">Exit</a>
                </div>
            </div>
        </div>
    </div>

}